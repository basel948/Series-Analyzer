#! /usr/bin/bash

Check_args(){ #Tasneem
echo "Check_args"
}

Replace() { #Tasneem
echo "Replace"
}

Print() { #Safa
echo $@	
}

Sorted() { #Tasneem
echo "Sorted"
}

Max() { #Safa
max=$1
	for num in "$@";do 
	if (($num>$max)); then 
		max=$num
	fi
	done
	echo "$max"
}

Min() { #Safa
}
min=$1
	for num in "$@";do 
	if (($num<$min)); then 
		min=$num
	fi
	done
	echo "$min"
Avg() { #Basel
echo "Avg"
}

Count() { #Basel
echo "Count"
}

Sum() { #Basel
echo "Sum"
}

PS3="Please make a selection => "
menu="Replace Print Sorted Max Min Avg Count Sum"
menuu="\n1)Replace\n2)Print\n3)Sorted\n4)Max\n5)Min\n6)Avg\n7)Count\n8)Sum\n9)Exit"
while true
do
    select action in $menu
    do
        Check_args
        case $action in
        Replace)
            Replace
        ;;
        Print)
            Print $@   
        ;;
        Sorted)
            Sorted
        ;;
        Max)
             Max $@
        ;;
        Min)
            Min $@
        ;;
        Avg)
            Avg
        ;;
        Count)
            Count
        ;;
        Sum)
            Sum
        ;;
        Exit)
            exit
        ;;
        *) echo "ERROR: Invalid selection"
        ;;
        esac
        echo -e $menuu
    done
done
