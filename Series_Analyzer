#! /usr/bin/bash

Check_args(){ #Tasneem
}

Replace() { #Tasneem
}

Print() { #Safa
}

Sorted() { #Tasneem
}

Max() { #Safa
}

Min() { #Safa
}

Avg() { #Basel
}

Count() { #Basel
}

Sum() { #Basel
}

PS3="Please make a selection => "
menu="Replace Print Sorted Max Min Avg Count Sum"
menuu="\n1)Replace\n2)Print\n3)Sorted\n4)Max\n5)Min\n6)Avg\n7)Count\n8)Sum\n9)Exit"
while true
do
    select action in $menu
    do
        Check_args
        case $action in
        Replace)
            Replace
        ;;
        Print)
            Print
        ;;
        Sorted)
            Sorted
        ;;
        Max)
            Max
        ;;
        Min)
            Min
        ;;
        Avg)
            Avg
        ;;
        Count)
            Count
        ;;
        Sum)
            Sum
        ;;
        Exit)
            exit
        ;;
        *) echo "ERROR: Invalid selection"
        ;;
        esac
        echo -e $menuu
    done
done
